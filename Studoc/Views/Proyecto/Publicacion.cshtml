@model Studoc.Models.Proyecto

<!DOCTYPE html>
<html>
<head>
    <title>Detalles de la Publicación</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f2f2f2;
            color: #333;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: white;
            border-radius: 5px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
        }

        .article-title {
            font-size: 28px;
            margin-bottom: 10px;
        }

        .article-content {
            font-size: 18px;
            line-height: 1.6;
            margin-bottom: 20px;
        }

        .edit-link {
            display: inline-block;
            margin-top: 10px;
            color: #007BFF;
            text-decoration: none;
            border-bottom: 1px solid #007BFF;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="article-title">@Model.Publicacion.Titulo</h2>
        <p class="article-content">@Model.Publicacion.Paso_1</p>
    </div>
</body>
</html>
